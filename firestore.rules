rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the fitflow collection
    match /fitflow/{workoutId} {
      // Allow read and write access to authenticated users
      // Only allow users to access their own workouts
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Allow creating new workouts for authenticated users
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
